<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="CameraButtonStyle">
        <item name="android:src">@mipmap/camera_24px</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ParentTextStyle">
        <item name="android:text">@string/detail_default_text</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="EditFragmentTextStyle" parent="ParentTextStyle">

    </style>

    <style name="DetailFragmentTextStyle" parent="ParentTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DetailFragmentTextLabelStyle" parent="DetailFragmentTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorPrimaryLight</item>
    </style>

</resources>
