<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="ContainerDividerStyle" parent="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center|bottom</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="CameraButtonStyle">
        <item name="android:src">@mipmap/camera_24px</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ParentTextStyle">
        <item name="android:text">@string/default_text</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="EditFragmentTextStyle" parent="ParentTextStyle">
        <!--Override for parent text so the hint text shows-->
        <item name="android:text"></item>
    </style>

    <style name="EditFragmentLabelTextStyle" parent="ParentTextStyle">
        <item name="android:textSize">@dimen/edit_label_text_size</item>
        <item name="android:textColor">@color/textColorPrimaryLight</item>
    </style>

    <style name="DetailFragmentTextStyle" parent="ParentTextStyle">
        <item name="android:textSize">@dimen/detail_text_size</item>
    </style>

    <style name="DetailFragmentTextLabelStyle" parent="DetailFragmentTextStyle">
        <item name="android:textSize">@dimen/detail_label_text_size</item>
        <item name="android:textColor">@color/textColorPrimaryLight</item>
    </style>

    <style name="DetailContainerStyle">
        <item name="android:layout_margin">@dimen/detail_container_separation</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RecyclerItemTextStyle" parent="ParentTextStyle">
        <item name="android:textSize">@dimen/recycler_item_text_size</item>
        <item name="android:text">text</item>
    </style>

    <style name="RecyclerItemTextLabelStyle" parent="RecyclerItemTextStyle">
        <item name="android:textSize">@dimen/recycler_item_label_text_size</item>
        <item name="android:textColor">@color/textColorPrimaryLight</item>
    </style>

</resources>
