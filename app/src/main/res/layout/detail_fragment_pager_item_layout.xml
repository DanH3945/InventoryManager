<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24dp">

    <TextView
        android:layout_marginTop="24dp"
        android:id="@+id/detail_product_name_text"
        style="@style/DetailFragmentTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/detail_barcode_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailFragmentTextLabelStyle"
        app:layout_constraintTop_toBottomOf="@id/detail_product_name_text"
        android:text="@string/detail_barcode_label"/>

    <TextView
        android:id="@+id/detail_barcode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_barcode_text_label"
        style="@style/DetailFragmentTextStyle"/>

    <TextView
        android:id="@+id/detail_custom_id_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailFragmentTextLabelStyle"
        app:layout_constraintTop_toBottomOf="@id/detail_product_name_text"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/detail_custom_id_label"/>

    <TextView
        android:id="@+id/detail_custom_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailFragmentTextStyle"
        app:layout_constraintTop_toBottomOf="@id/detail_custom_id_text_label"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_cost_text_label"
        android:text="@string/detail_cost_label"
        style="@style/DetailFragmentTextLabelStyle"
        app:layout_constraintTop_toBottomOf="@id/detail_barcode_text"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_cost_text_label"
        style="@style/DetailFragmentTextStyle"
        android:id="@+id/detail_cost_text"/>
    
    <TextView
        android:id="@+id/detail_retail_text_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailFragmentTextLabelStyle"
        android:text="@string/detail_retail_label"
        app:layout_constraintTop_toBottomOf="@id/detail_custom_id_text"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_retail_text"
        app:layout_constraintTop_toBottomOf="@id/detail_retail_text_label"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/DetailFragmentTextStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailFragmentTextLabelStyle"
        android:text="@string/detail_current_stock_label"
        app:layout_constraintTop_toBottomOf="@id/detail_cost_text"
        android:id="@+id/detail_current_stock_text_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailFragmentTextStyle"
        app:layout_constraintTop_toBottomOf="@id/detail_current_stock_text_label"
        android:id="@+id/detail_current_stock_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_target_stock_label"
        android:text="@string/detail_target_stock_label"
        style="@style/DetailFragmentTextLabelStyle"
        app:layout_constraintTop_toBottomOf="@id/detail_retail_text"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailFragmentTextStyle"
        app:layout_constraintTop_toBottomOf="@id/detail_target_stock_label"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/detail_track_text_label"
        android:text="@string/detail_tracked_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_current_stock_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="128dp"
        style="@style/DetailFragmentTextLabelStyle"/>

    <TextView
        android:id="@+id/detail_track_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailFragmentTextStyle"
        app:layout_constraintTop_toBottomOf="@id/detail_track_text_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>
