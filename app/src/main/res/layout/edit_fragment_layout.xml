<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/edit_fragment_constraint_margin">

    <EditText
        android:id="@+id/edit_product_name_et"
        android:layout_width="@dimen/edit_fragment_et_big_field"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Product Name"
        style="@style/EditFragmentEditTextStyle"/>


    <EditText
        android:id="@+id/edit_product_customid_et"
        android:layout_width="@dimen/edit_fragment_et_big_field"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_product_name_et"
        android:hint="Custom Id"
        style="@style/EditFragmentEditTextStyle"/>

    <EditText
        android:id="@+id/edit_product_barcode_et"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_product_customid_et"
        android:hint="Barcode"
        android:layout_marginEnd="60dp"
        style="@style/EditFragmentEditTextStyle" />

    <ImageButton
        android:id="@+id/edit_product_barcode_camera_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/camera_24px"
        app:layout_constraintLeft_toRightOf="@id/edit_product_barcode_et"
        app:layout_constraintTop_toBottomOf="@id/edit_product_customid_et"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:scaleType="fitCenter"/>

    <EditText
        android:id="@+id/edit_fragment_cost_et"
        android:layout_width="@dimen/edit_fragment_et_small_field"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_product_barcode_et"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_fragment_retail_et"
        android:hint="Cost"
        style="@style/EditFragmentEditTextStyle"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/edit_fragment_retail_et"
        android:layout_width="@dimen/edit_fragment_et_small_field"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_product_barcode_et"
        app:layout_constraintLeft_toRightOf="@id/edit_fragment_cost_et"
        app:layout_constraintRight_toLeftOf="parent"
        android:hint="Retail"
        style="@style/EditFragmentEditTextStyle"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/edit_fragment_stock_current_et"
        android:layout_width="@dimen/edit_fragment_et_small_field"
        android:layout_height="wrap_content"
        android:hint="Current Stock"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_fragment_stock_target_et"
        app:layout_constraintTop_toBottomOf="@id/edit_fragment_cost_et"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="32dp"/>

    <EditText
        android:id="@+id/edit_fragment_stock_target_et"
        android:layout_width="@dimen/edit_fragment_et_small_field"
        android:layout_height="wrap_content"
        android:hint="Target Stock"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/edit_fragment_stock_current_et"
        app:layout_constraintTop_toBottomOf="@id/edit_fragment_retail_et"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/edit_fragment_track_switch_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tracking"
        app:layout_constraintBottom_toTopOf="@id/edit_fragment_track_switch_button"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"/>

    <Switch
        android:id="@+id/edit_fragment_track_switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_fragment_stock_current_et"
        app:layout_constraintBottom_toTopOf="@id/edit_save_button"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        android:textOn="On"
        android:textOff="Off"
        android:showText="true"/>

    <Button
        android:id="@+id/edit_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/button_save_product_string"
        style="@style/ButtonStyle"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>